{% extends "base.html.twig" %}

{% block body %}
	<div class="container">

		<h2 class="mt-4">Modification de la recette
		</h2>

		{{ form_start(form) }}

		<div class="form-group">
			{{form_label(form.name)}}
			{{form_widget(form.name)}}
			<div class="from-error">
				{{ form_errors(form.name) }}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.cooking_time)}}
			{{form_widget(form.cooking_time)}}
			<div class="from-error">
				{{ form_errors(form.cooking_time) }}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.people)}}
			{{form_widget(form.people)}}
			<div class="from-error">
				{{ form_errors(form.people) }}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.difficulty)}}
			{{form_widget(form.difficulty)}}
			<div class="from-error">
				{{ form_errors(form.difficulty) }}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.description)}}
			{{form_widget(form.description)}}
			<div class="from-error">
				{{ form_errors(form.description) }}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.price)}}
			{{form_widget(form.price)}}
			<div class="from-error">
				{{ form_errors(form.price) }}
			</div>
		</div>
		<div class="form-group">
			{{form_label(form.favorite)}}
			{{form_widget(form.favorite)}}
			<div class="from-error">
				{{ form_errors(form.favorite) }}
			</div>
		</div>

		{{form_row(form.ingredients)}}

		<div class="form-groupe">
			{{form_row(form.submit)}}
		</div>
		{{ form_end(form) }}
	</div>
{% endblock %}
